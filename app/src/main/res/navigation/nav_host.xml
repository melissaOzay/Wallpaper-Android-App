<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/imageScreenFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.havucwallpapernewversion.ui.categories.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category">

        <action
            android:id="@+id/action_categoryFragment_to_imageDetailFragment"
            app:destination="@id/imageCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageScreenFragment"
        android:name="com.example.havucwallpapernewversion.ui.images.ImagesFragment"
        android:label="ImageScreenFragment"
        tools:layout="@layout/fragment_image_screen">
        <argument
            android:name="type"
            android:defaultValue="HOME"
            app:argType="com.example.havucwallpapernewversion.ui.images.ImagesScreenType" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.havucwallpapernewversion.ui.images.ImagesFragment"
        android:label="FavoriteFragment"
        tools:layout="@layout/fragment_image_screen">
    <argument
        android:name="type"
        android:defaultValue="FAVORÄ°TE"
        app:argType="com.example.havucwallpapernewversion.ui.images.ImagesScreenType" />
    </fragment>

    <fragment
        android:id="@+id/imageCategoryFragment"
        android:name="com.example.havucwallpapernewversion.ui.images.ImagesFragment"
        android:label="imageCategoryFragment"
        tools:layout="@layout/fragment_image_screen">
        <argument
            android:name="type"
            android:defaultValue="CATEGORY_DETAIL"
            app:argType="com.example.havucwallpapernewversion.ui.images.ImagesScreenType" />
        <argument
            android:name="title"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="false" />
    </fragment>
</navigation>